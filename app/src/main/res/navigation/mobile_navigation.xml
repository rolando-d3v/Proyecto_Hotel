<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_login">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.proyecto_hotel.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_infoCuartoFragment"
            app:destination="@id/navigation_infoCuartoFragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_agregarServicioFragment"
            app:destination="@id/navigation_agregarServicioFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_reservas"
        android:name="com.example.proyecto_hotel.ui.reservas.ReservasFragment"
        android:label="@string/title_reservas"
        tools:layout="@layout/fragment_reservas" />

    <fragment
        android:id="@+id/navigation_calificacion"
        android:name="com.example.proyecto_hotel.ui.calificacion.CalificacionFragment"
        android:label="@string/title_calificacion"
        tools:layout="@layout/fragment_calificacion" />


    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.proyecto_hotel.ui.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.proyecto_hotel.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/navigation_infoCuartoFragment"
        android:name="com.example.proyecto_hotel.ui.infocuarto.InfoCuartoFragment"
        android:label="Información de cuarto"
        tools:layout="@layout/fragment_info_cuarto" />
    <fragment
        android:id="@+id/navigation_agregarServicioFragment"
        android:name="com.example.proyecto_hotel.ui.infocuarto.AgregarServicioFragment"
        android:label="Servicio por celebración"
        tools:layout="@layout/fragment_agregar_servicio" >
        <action
            android:id="@+id/action_navigation_agregarServicioFragment_to_navigation_registrarReservaFragment"
            app:destination="@id/navigation_registrarReservaFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_registrarReservaFragment"
        android:name="com.example.proyecto_hotel.ui.infocuarto.RegistrarReservaFragment"
        android:label="Registrar reserva"
        tools:layout="@layout/fragment_registrar_reserva" />
</navigation>